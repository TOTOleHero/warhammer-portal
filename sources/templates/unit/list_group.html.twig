<div class="list-group">
{% for unit in units %}
  <a href="{{ path('unit_show', {'id': unit.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">{{ unit.basename }}</h5>
      <small>3 days ago</small>
    </div>
    <p class="mb-1">Description</p>
    <small>Game system : 
    {% for gameSystem in unit.gameSystems %}
      {% if not loop.first %}, {% endif %}{{ gameSystem.name }}
    {% endfor %}
    </small>
  </a>

{% else %}
 <dic class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">No data</h5>
      
    </div>
    <p class="mb-1">No data</p>
  </div>
 {% endfor %}

</div>
