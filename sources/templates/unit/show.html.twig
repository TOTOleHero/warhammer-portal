{% extends 'base.html.twig' %}

{% block title %}Unit{% endblock %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>base_name</th>
                <td>{{ unit.baseName }}</td>
            </tr>

          
            {% for gameSystem,profiles in unit.profilesByGameSystems %}
                <tr>
                     <td colspan="2">
                        {{ gameSystem }}
                    </td>
                </tr>
                {% for profile in profiles %}
                <tr> 
                    <td colspan="2">
                        {% if  profile.profileType == 'profileWFB9'%}
                                {% include 'profileWFB9/line.html.twig' with {'profileWFB9': profile}  %}
                        {% endif %}
                        
                    </td>
                </tr>
                {% endfor %}
            {% endfor %}
           
        </tbody>
    </table>

    <a href="{{ path('unit_index') }}">back to list</a>

    <a href="{{ path('unit_edit', {'id': unit.id}) }}">edit</a>

    {{ include('unit/_delete_form.html.twig') }}
{% endblock %}
